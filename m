 test_expect_success \
     'see if git show-ref works as expected' \
     'git branch a &&
-     SHA1=3D`cat .git/refs/heads/a` &&
+     SHA1=3D$(cat .git/refs/heads/a) &&
      echo "$SHA1 refs/heads/a" >expect &&
      git show-ref a >result &&
      test_cmp expect result'
