 #!/bin/sh
 
+get_synopsis () {
+	local cmd="$1"
+
+	sed -n '
+		/^NAME/,/'"$cmd"'/H
+		${
+			x
+			s/.*'"$cmd"' - \(.*\)/N_("\1")/
+			p
+		}' "Documentation/$cmd.txt"
+}
